@model IEnumerable<WebChef.Models.Ingrediente>

@{
    ViewData["Title"] = "Ver Preferências";
}

<h1>Ver Preferências</h1>
<div class="col-xs-12" style="height:50px;"></div>
<table class="table">
    <tr bgcolor='@("#EEE")'>
        <th>
            Ingredientes Preferidos
        </th>
    </tr>

    @foreach (var ingrediente in Model)
    {
        @if (ingrediente.favorito == "S")
        {
            <tr>
                <td class="text-center"><img class="img-fluid" src=@Url.Content(ingrediente.imagem) /></td>
                <td>
                    @Html.DisplayFor(modelingrediente => ingrediente.designacao)
                </td>
                <td>
                    <a asp-controller="ReceitaView" asp-action="Remover" asp-route-id=@ingrediente.id_ingrediente>
                        Remover
                    </a>
                </td>
            </tr>
        }
     }

</table>


<table class="table">
    <tr bgcolor='@("#EEE")'>
        <th>
            Ingredientes a Evitar
        </th>
    </tr>

    @foreach (var ingrediente in Model)
    {
        @if (ingrediente.favorito == "N")
        {
            <tr>
                <td class="text-center"><img class="img-fluid" src=@Url.Content(ingrediente.imagem) /></td>
                <td>
                    @Html.DisplayFor(modelingrediente => ingrediente.designacao)
                </td>
                <td>
                    <a asp-controller="ReceitaView" asp-action="Remover" asp-route-id=@ingrediente.id_ingrediente>
                        Remover
                    </a>
                </td>
            </tr>
         }
     }

</table>
