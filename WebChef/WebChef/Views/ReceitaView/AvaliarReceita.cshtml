@model WebChef.Models.ReceitaUtilizador

@{
    ViewData["Title"] = "AvaliarReceita";
}

<h1>Avaliar Receita</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.duracao)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.duracao
            </dd>
        </dl>
            <form asp-action="AvaliarReceita">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="classificacao" class="control-label"></label>
                    <select asp-for="classificacao">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <span asp-validation-for="classificacao" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="avaliacao_dificuldade" class="control-label"></label>
                    <select asp-for="avaliacao_dificuldade">
                        <option value="Fácil">Fácil</option>
                        <option value="Médio">Médio</option>
                        <option value="Difícil">Difícil</option>
                    </select>
                    <span asp-validation-for="avaliacao_dificuldade" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="anotacao" class="control-label"></label>
                    <input asp-for="anotacao" class="form-control" />
                    <span asp-validation-for="anotacao" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Submeter" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

