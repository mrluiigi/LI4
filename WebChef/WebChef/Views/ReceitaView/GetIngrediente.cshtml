@model WebChef.Models.Ingrediente
@{
    ViewData["Title"] = "GetIngrediente";
}

<h1>@Model.designacao</h1>

<div class="image">
    <img class="card-img-top img-fluid" src=@Url.Content(Model.imagem) alt="Card image cap">
</div>

@for (int i = 0; i < Model.localizacoes.Length; i++)
{
    <dd class="col-sm-10">
        @Model.localizacoes[i].nome
    </dd>
    <dd class="col-sm-10">
        @Model.localizacoes[i].coordenadas
    </dd>
}

<div>
    <a asp-controller="ReceitaView" asp-action="VoltaAReceita" asp-route-id=@ViewBag.idReceita class="btn btn-secondary">
        Retroceder
    </a>
</div>